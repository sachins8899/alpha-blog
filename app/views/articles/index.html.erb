<h1>All Articles </h1>
<%= link_to 'New Article', new_article_path %>
<table cellpadding="5px">
	<thead>
		<th>S.No</th>
		<th>Articles</th>
		<th>Description</th>
		<th>Actions</th>
	</thead>
	<tbody>
		<% i=1 %>
		<% @article.each do |articles|%>
		<tr>
			<td><%= i %><% i+=1%></td>
			<td><%= articles.title%></td>
			<td><%= articles.description%></td>
			<td><%= link_to 'Show' ,article_path(articles) %> | <%= link_to 'Delete' ,article_path(articles),method: :delete ,data: {confirm: "Are You Sure ?"} %> </td>
		</tr>
		<% end %>
	</tbody>
</table>
