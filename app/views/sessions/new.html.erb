<div class='row'>
	<div class='well col-xs-5 col-sm-offset-3 col'>
		<%= form_for(:session , :html => {class: "form-horizontal",role: "form"}, url: login_path) do |f|%>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :email %>
				</div>
				<div class="control-label col-sm-8">
					<%= f.email_field :email, class: "form-control", placeholder: "User Name", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :password %>
				</div>
				<div class="col-sm-8">
					<%= f.password_field :password, class: "form-control", placeholder: "Your Password" ,autocomplete: "off" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit "Login", class: 'btn btn-primary btn-lg col-xs-9' %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<p>Don't Have Alpha Account <%= link_to 'Sign Up', signup_path %> Here</p>
				</div>
			</div>
		<% end %>
		<div class="col-xs-10 col-xs-offset-4">
			[ <%= link_to "Back To Home Page", root_path %> ]
		</div>
	</div>
</div>