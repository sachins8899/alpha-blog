<h1>All Alpha Bloggers</h1>
<div align="center">
	<%= will_paginate%>
</div>

<% @users.each do |u|%>
<ul class="listing">
<div class="row center">
	<div class="well col-md-8 col-md-offset-2">
		<li><h2><%= link_to u.first_name+" "+u.last_name, user_path(u) %></h2></li>
		<li> <%= link_to gravatar_for(u), user_path(u) %></li>
		<li><%= link_to u.username, user_path(u) %></li>
		<li><small><%= pluralize(u.articles.count, "article") if u.articles %></small></li>
	</div>
</div>
</ul>
<% end %>

<div align="center">
	<%= will_paginate%>
</div>